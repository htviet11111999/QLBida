<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#C5E4A1"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="TƯ VẤN VỀ BÃI GIỮ XE "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Mời bạn chọn bãi giữ mà bạn mong muốn:  "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="italic" />
    <RadioGroup
        android:id="@+id/rd_baigiuxe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radio_anninh"
            android:layout_marginTop="30dp"
            android:text="An ninh, cẩn mật"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_baigiuxebinhthuong"
            android:layout_marginTop="30dp"
            android:text="Bình thường, rộng rãi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_baigiuxekhongqt"
            android:layout_marginTop="30dp"
            android:text="Có là được, hàng rào, sân vườn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <TextView
        android:id="@+id/ketqua_baigiuxe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_tt_baigiuxe"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/round_border"
        android:text="Tiếp tục"
        android:fontFamily="serif"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_thoabaigiuxe"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/round_border"
        android:text="Thoát"
        android:fontFamily="serif"
        android:textStyle="bold"/>
</LinearLayout>